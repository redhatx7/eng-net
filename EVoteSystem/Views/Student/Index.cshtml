@using EVoteSystem.Extensions
@model IList<Student>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}



<div class="row">
    <div class="col">
        <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">لیست دانش آموزان</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                       <table class="table table-striped table-advance table-hover">
                           <tbody>
                           <tr>
                               <th>نام </th>
                               <th> پایه</th>
                               <th>تاریخ تولد</th>
                               <th> پست الکترونیک</th>
                               <th>کد ملی</th>
                               <th>تصویر</th>
                                <th>عملیات</th>
                               
                           </tr>
                           @foreach (var student in Model)
                           {
                               <tr>
                                   <td>@student.Fullname</td>
                                   <td>@student.Grade.GetDisplayName()</td>
                                   <td>@student.Birthday.ToShortDateString()</td>
                                   <td>@student.Email</td>
                                   <td>@student.NationalCode</td>
                                   <td> <img class="img-thumbnail img-size-50" src="@student.PersonalImagePath"> </td>
                                   <td>
                                       <a asp-action="EditStudent" asp-route-id="@student.Id" class="btn btn-primary">ویرایش</a>
                                       <a asp-action="DeleteStudent" asp-route-id="@student.Id" class="btn btn-danger">حذف</a>
                                   </td>
                               </tr>
                           }
                       
                           </tbody>
                           <tfoot>
                            <tr>
                                <th>ردیف</th>
                                <th>نام</th>
                                <th>نام خانوادگی</th>
                                <th>پایه </th>
                                <th>مشاهده پروفایل</th>
                                <th> ثبت کاندید</th>
                            </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
    </div>
</div>
