@model EVoteSystem.Models.Student
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}


<div class="row">
    <div class="col-md-6">
        <!-- general form elements -->
        <div class="card card-info">
            <div class="card-header">
                <h3 class="card-title">افزودن این دانش آموز به لیست کاندید ها</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form asp-action="AddCandidate" enctype="multipart/form-data">
                 <div class="form-group ">
                              <label asp-for="Name" class="control-label col-lg-2"></label>
                              <div class="col-lg-10">
                                <input class="form-control" asp-for="Name" required />
                                <span asp-validation-for="Name"></span>
                              </div>
                            </div>
                            <div class="form-group ">
                              <label asp-for="Surename" class="control-label col-lg-2"></label>
                              <div class="col-lg-10">
                                <input class="form-control" asp-for="Surename" required />
                                <span asp-validation-for="Surename"></span>
                              </div>
                            </div>
                            <div class="form-group ">
                              <label asp-for="Email" class="control-label col-lg-2"></label>
                              <div class="col-lg-10">
                                <input class="form-control" asp-for="Email" required />
                                <span asp-validation-for="Email"></span>
                              </div>
                            </div>
                                    
                            <div class="form-group ">
                              <label asp-for="Grade" class="control-label col-lg-2"></label>
                              <div class="col-lg-10">
                                <select class="form-control" asp-for="Grade" asp-items="@Html.GetEnumSelectList<Grade>()"></select>
                                <span asp-validation-for="Grade"></span>
                              </div>
                            </div>
                                    
                            <div class="form-group ">
                              <label asp-for="NationalCode" class="control-label col-lg-2"></label>
                              <div class="col-lg-10">
                                <input class="form-control" asp-for="NationalCode" required />
                                <span asp-validation-for="NationalCode"></span>
                              </div>
                            </div>
                                    
                            <div class="form-group ">
                              <label asp-for="UserName" class="control-label col-lg-2"></label>
                              <div class="col-lg-10">
                                <input class="form-control" asp-for="UserName" readonly />
                                <span asp-validation-for="UserName"></span>
                              </div>
                            </div>
                            
                <!-- /.card-body -->

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">افزودن</button>
                </div>
            </form>
        </div>


    </div>
</div>