@model EVoteSystem.Models.Student
@{
  ViewBag.Title = "title";
  Layout = "_Layout";
}




<div class="row">
    <div class="col-md-6">
        <!-- general form elements -->
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">افزودن دانش‌آموز</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form role="form">
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input class="form-control" asp-for="Name" readonly>
                    </div>
                    <div class="form-group">
                        <label asp-for="Surename"></label>
                        <input class="form-control" asp-for="Surename" readonly>
                    </div>
                    <div class="form-group">
                        <label asp-for="NationalCode"></label>
                        <input class="form-control" asp-for="NationalCode" readonly >
                    </div>

                    
                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">ارسال</button>
                </div>
            </form>
        </div>


    </div>
</div>